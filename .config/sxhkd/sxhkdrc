## WM INDEPENDENT HOTKEYS

# Reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd


## BSPWM HOTKEYS

# Quit/Restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close/Kill window
super + {_,shift + }q
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Swap the current node and the biggest window
super + g
	bspc node -s biggest.window


## STATE/FLAGS

# Set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


## FOCUS/SWAP

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# Focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
	
# Send to desktop and move to window
alt + {1-9,0}
    bspc node -d '^{1-9,10}' --follow


## PRESELECT

# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


## MOVE/RESIZE

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move a floating window
#super + {Left,Down,Up,Right}
#	bspc node -v {-20 0,0 20,0 -20,20 0}
	
# Toggle tile
super + {_,shift +} t
	bspc window -t {floating,fullscreen}
	

## RESIZE NODES

#alt + {a,f}
#	$HOME/.scripts/window_move.sh {-p,-n} -x -s 20
#alt + {s,d}
#	$HOME/.scripts/window_move.sh {-p,-n} -y -s 20

# Change window gap
alt + {minus,equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Move floating windows (requires baskerville's xdo)
alt + {Left,Right,Up,Down}
    xdo move {-x -20,-x +20,-y -20,-y +20}

# Move current window to a pre-selected space
super + shift + m
    bspc node -n last.!automatic
    
# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}


## SPAWN PROGRAMS

# Open terminal emulator
super + Return
	urxvt

# Open firefox
alt + b
	firefox

# Open rofi launcher
super + @space
	rofi -show drun -show-icons
	
# Toggle keepassxc
alt + k
    ~/.scripts/bspwm-toggle-visibility.sh keepassxc
    
# Toggle signal
super + r; s
   ~/.scripts/bspwm-toggle-visibility.sh signal signal-desktop
   
# Toggle vscodium
super + r; c
    ~/.scripts/bspwm-toggle-visibility.sh vscodium codium


## SCRIPTS

# Generate password
super + r ; g ; p
    tr -dc "a-zA-Z0-9_#@.-" < /dev/urandom | head -c 20 | xclip -selection clipboard


## CONTROL KEYS

# Adjust brightness
XF86MonBrightness{Up,Down}
	brightnessctl s 50{+,-}

# Adjust volume
XF86Audio{Raise,Lower}Volume
	amixer -c 1 set Master 3{+,-}
XF86AudioMute
	pactl set-sink-mute 0 toggle

# Screenshot whole window
Print
    maim -s ~/Pictures/Screenshots/$(date +%F-%H:%M:%S).png
    
# Screenshot current active node
shift + Print
    maim -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%F-%H:%M:%S).png

# Select section and copy to clipboard
alt + Print
    maim -s -u | xclip -selection clipboard -t image/png -i
    
# Select section, save screenshot and copy to clipboard
alt + shift + Print
    maim -s /tmp/screenshot.png ; cat /tmp/screenshot.png | xclip -selection clipboard -t image/png
